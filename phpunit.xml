<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php"
         colors="true"
         stopOnFailure="false"
         verbose="true"
>
    <testsuites>
        <testsuite name="All Tests from ./tests/">
            <directory>./tests/</directory>
        </testsuite>
    </testsuites>
    <coverage>
        <include>
            <directory suffix=".php">./src/</directory>
        </include>
        <report>
            <html outputDirectory="./tests/report"/>
        </report>
    </coverage>
</phpunit>
